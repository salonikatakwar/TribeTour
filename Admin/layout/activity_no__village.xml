<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.admin.No_Village"
    android:background="#fffefe">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Data"
                    android:textSize="40sp"
                    android:id="@+id/title"
                    android:textColor="#000000"
                    android:layout_marginTop="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/vector_description"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title"
                    android:background="#000000"
                    android:layout_marginTop="15dp"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/vector_description"
                    android:src="@drawable/ic_assignment_black_24dp"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="50dp"

                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Description"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/description"
                    android:layout_above="@+id/vector_cuisine"
                    android:layout_toEndOf="@+id/vector_description" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/vector_cuisine"
                    android:src="@drawable/ic_restaurant_black_24dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/vector_description"
                    android:layout_alignStart="@+id/vector_description" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Accessibility"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/accessibility"
                    android:layout_above="@+id/vector_Clothing"
                    android:layout_toEndOf="@+id/vector_accessibility" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/vector_accessibility"
                    android:src="@drawable/ic_directions_bus_black_24dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/vector_cuisine"

                    android:layout_alignStart="@+id/vector_cuisine" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Cuisines"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/cuisine"
                    android:layout_alignBottom="@+id/vector_cuisine"
                    android:layout_toEndOf="@+id/vector_cuisine" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/vector_Clothing"
                    android:src="@drawable/cloth"
                    android:layout_below="@+id/vector_accessibility"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"

                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Clothing"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:id="@+id/clothing"
                    android:layout_alignBottom="@+id/vector_Clothing"
                    android:layout_alignEnd="@+id/cuisine" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/done"
                    android:layout_marginTop="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/vector_Clothing"
                    android:background="#000000"
                    android:text="  DONE UPLOADING  "/>


            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>


