<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vishalsingh.villageexpandedview.AnimationActivity"
    tools:showIn="@layout/activity_animation">

    <ImageView
        android:id="@+id/tribalLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/logo1"/>

    <ImageView
        android:id="@+id/imageTagline"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/tagline_2"
        android:layout_below="@+id/tribalLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />


</RelativeLayout>
